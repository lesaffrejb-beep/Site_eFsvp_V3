{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "efsvp/contact",
  "title": "Contact avec Formulaire",
  "category": "efsvp-blocks",
  "icon": "email",
  "description": "Section contact avec formulaire complet, citation et informations de contact alternatives",
  "keywords": ["contact", "form", "formulaire", "email", "efsvp"],
  "version": "1.0.0",
  "textdomain": "efsvp",
  "supports": {
    "align": ["wide", "full"],
    "anchor": true,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "sectionTitle": {
      "type": "string",
      "default": "La vôtre commence maintenant"
    },
    "sectionSubtitle": {
      "type": "string",
      "default": "Réponse sous 48h · Premier échange offert"
    },
    "quote": {
      "type": "string",
      "default": "Toutes les bonnes histoires méritent d'être racontées."
    },
    "backgroundColor": {
      "type": "string",
      "default": "#f8f9fa"
    },
    "contactEmail": {
      "type": "string",
      "default": "contact@efsvp.fr"
    },
    "altContactTitle": {
      "type": "string",
      "default": "Ou contactez-nous directement"
    },
    "altContactLocation": {
      "type": "string",
      "default": "Basé à Angers · Partout en Francophonie"
    }
  },
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "viewScript": "file:./view.js",
  "render": "file:./render.php"
}
