{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "efsvp/stats",
  "title": "Stats Section",
  "category": "efsvp-blocks",
  "icon": "chart-bar",
  "description": "Section statistiques avec chiffres clés",
  "keywords": ["stats", "statistics", "numbers", "efsvp"],
  "version": "1.0.0",
  "textdomain": "efsvp",
  "supports": {
    "align": ["wide", "full"],
    "anchor": true,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "sectionTitle": {
      "type": "string",
      "default": "La preuve par les chiffres"
    },
    "stats": {
      "type": "array",
      "default": [
        {
          "number": "60+",
          "label": "Représentations",
          "animated": true
        },
        {
          "number": "15+",
          "label": "Projets institutionnels",
          "animated": true
        },
        {
          "number": "1200€",
          "label": "À partir de",
          "animated": false
        },
        {
          "number": "4",
          "label": "Années d'expérience terrain",
          "animated": true
        }
      ]
    }
  },
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "render": "file:./render.php"
}
